#include <conio.h>
#include <stdio.h>

int main()
{
    char nombre[30];
    char codigo;
    printf("Ingrese nombre: ");
    scanf(" %s",&nombre);
    printf("\nEstado civil:\n\n");
    printf("Ingrese 'S' para soltero\nIngrese 'C' para casado\nIngrese 'D' para divorciado\nIngrese 'U' para unido\nIngrese 'V' para viudo\n\n");
    scanf(" %c",&codigo);

     switch (codigo)
    {
        case  'S' : case 's': 
        printf( "SE LE COMUNICA A %s QUE SU COLABORACION PARA LAS FIESTAS PATRONALES ES DE: 25.00. GRACIAS POR SU ATENCION. ",nombre);
                  break;
        case  'C' : case 'c':
        printf( "SE LE COMUNICA A %s QUE SU COLABORACION PARA LAS FIESTAS PATRONALES ES DE: 20.00. GRACIAS POR SU ATENCION. ",nombre);
                  break;
        case  'D' : case 'd':
        printf( "SE LE COMUNICA A %s QUE SU COLABORACION PARA LAS FIESTAS PATRONALES ES DE: 15.00. GRACIAS POR SU ATENCION. ",nombre);
                  break;
        case  'U' : case 'u':
        printf( "SE LE COMUNICA A %s QUE SU COLABORACION PARA LAS FIESTAS PATRONALES ES DE: 10.00. GRACIAS POR SU ATENCION. ",nombre);
                  break;
        case  'V' : case 'v':
        printf( "SE LE COMUNICA A %s QUE SU COLABORACION PARA LAS FIESTAS PATRONALES ES DE: 5.00. GRACIAS POR SU ATENCION. \n",nombre);
                  break;
        default: printf( "DATOS ERRONEOS" );
    }
getch ();
return main ();
}
